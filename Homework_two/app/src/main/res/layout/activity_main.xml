<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile"/>
    <TextView
        android:id="@+id/firstNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_first_name"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_second_name"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/emailTextView"
        android:text="@string/my_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:text="@string/my_birth_year"
        android:layout_height="wrap_content"
        android:id="@+id/birthYearTextView"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:text="@string/my_gender"
        android:layout_height="wrap_content"
        android:id="@+id/genderTextView"
        android:textSize="25dp"/>

    <Button
        android:text="Edit Profile Info"
        android:id="@+id/editProfileInfo"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:layout_height="wrap_content"/>

</LinearLayout>